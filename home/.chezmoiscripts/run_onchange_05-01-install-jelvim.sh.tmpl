#
# Install Neovim config (jelvim) (not managed by chezmoi)
#
# Version: 1.0.0

set -euo pipefail

echo "==> Installing jelvim Neovim config..."

if ! command -v git &>/dev/null; then
  echo "git not found; cannot install jelvim"
  exit 1
fi

NVIM_DIR="$HOME/.config/nvim"

if [[ ! -d "$NVIM_DIR" ]]; then
  git clone --depth 1 https://github.com/verlihirsh/jelvim.git "$NVIM_DIR"
else
  git -C "$NVIM_DIR" pull --ff-only || true
fi

echo "==> jelvim installation complete!"
